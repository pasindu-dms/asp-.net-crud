@page
@model StudetManagement.Pages.Students.CreateModel
@{
}
<br />
<h2>New Students</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Student Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.studentinfo.name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Registration Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="reg_num" value="@Model.studentinfo.reg_id" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Index Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="indexNum" value="@Model.studentinfo.indexNum" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mobile Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="mobile" value="@Model.studentinfo.phone" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.studentinfo.address" />
        </div>
    </div>
    @if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.successMessage</strong>
            <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label="Close"></button>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
